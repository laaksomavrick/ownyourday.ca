<%= render 'layouts/page_header', header: t('tasks.create.header') %>

<%= form_with model: @adhoc_task, url: adhoc_tasks_path, scope: :adhoc_task  do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :task_list_id, value: params[:task_list_id] %>

  <div class="flex flex-col pb-4">
    <%= f.label :name, t('goal.name_label'), class: "text-2xl font-medium pb-4 select-none" %>
    <%= f.text_field :name, class: "text-2xl p-4 rounded-md border-gray-200", autofocus: true %>
    <%= render 'layouts/forms/input_error', model: @adhoc_task, field: :name %>
  </div>

  <div class="flex w-100">
    <%= f.submit nil, class: primary_button("ml-auto") %>
  </div>

<% end %>
