<div class="flex justify-between">
  <%= render 'layouts/page_header', header: render(Breadcrumbs::BreadcrumbsComponent.new(breadcrumbs: @breadcrumbs)) %>
</div>

<div class="flex flex-col">
  <%= form_for @milestone, url: goal_milestones_path(@goal) do |f| %>
    <div class="flex flex-col pb-4">
      <%= f.label :name, t('milestones.new.name_label'), class: label_class("text-xl") %>
      <%= f.text_field :name, class: text_field_class("text-xl"), autofocus: true %>
      <%= render 'layouts/forms/input_error', model: @milestone, field: :name %>
    </div>

    <div class="flex flex-col pb-4">
      <%= f.label :description, t('milestones.new.description_label'), class: label_class("text-xl") %>
      <%= f.text_area :description, class: text_field_class("text-xl") %>
      <%= render 'layouts/forms/input_error', model: @milestone, field: :description %>
    </div>

    <div class="flex w-100">
      <%= f.submit nil, class: primary_button("ml-auto") %>
    </div>
<% end %>
</div>
