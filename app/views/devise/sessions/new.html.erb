<div class="flex items-center content-center h-full max-w-lg m-auto">
  <div class="w-full p-4 m-auto flex flex-col items-center">
    <p class="align-center mb-6 font-semibold tracking-wide text-4xl">
      <%= image_tag('logo192.png', class: 'max-w-[48px]') %>
    </p>
    <p class="align-center mb-6 font-semibold tracking-wide text-4xl">
      <%= t("ownyourday") %>
    </p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { class: "w-full space-y-4" }) do |f| %>
    <div class="w-full">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:
      text_field_class, placeholder: t('global.email_address') %>
    </div>

    <div class="w-full">
      <%= f.password_field :password, autocomplete: "current-password", class:
      text_field_class, placeholder: t('global.password') %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="w-full">
      <%= f.check_box :remember_me, checked: true, class: "w-4 h-4 mr-1 text-blue-600
      bg-gray-100 border-gray-300 rounded focus:ring-blue-500
      dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2
      dark:bg-gray-700 dark:border-gray-600 text-indigo-500" %> <%= f.label :remember_me, class:
      "w-full text-md" %>
    </div>
    <% end %>

    <div class="w-full">
      <%= f.submit "Log in", class: "bg-indigo-500 hover:bg-indigo-400 text-white font-bold py-2 px-4 rounded w-full shadow hover:shadow-md", role: "button" %>
    </div>
    <% end %>

    <div class="w-full pt-4 text-center">
      <%= link_to t('users.registrations.create.url_text'),  new_user_registration_path, { class: 'text-blue-400'} %>
    </div>
  </div>

</div>
